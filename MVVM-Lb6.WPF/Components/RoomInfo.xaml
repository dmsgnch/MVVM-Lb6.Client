<UserControl
    x:Class="MVVM_Lb6.Components.RoomInfo"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        
        <GroupBox
            Grid.Row="0"
            Header="Room information"
            Margin="5,5,5,5" 
            SnapsToDevicePixels="true">
            
            <StackPanel>
                <Label>
                    <TextBlock>
                        <Run Text="Room number: "/>
                        <Run Text="{Binding UiRoom.RealNumber, Mode=OneWay, FallbackValue=Room is not selected}"/>
                    </TextBlock>
                </Label>
                
                <Label>
                    <TextBlock>
                        <Run Text="Beds number: "/>
                        <Run Text="{Binding UiRoom.BedsNumber, Mode=OneWay, FallbackValue=Room is not selected}"/>
                    </TextBlock>
                </Label>
                
                <Label>
                    <TextBlock>
                        <Run Text="Price per day: "/>
                        <Run Text="{Binding UiRoom.PricePerDay, Mode=OneWay, FallbackValue=Room is not selected}"/>
                    </TextBlock>
                </Label>
                
                <Label>
                    <TextBlock>
                        <Run Text="Is available: "/>
                        <Run Text="{Binding UiRoom.IsAvailable, Mode=OneWay, FallbackValue=Room is not selected}"/>
                    </TextBlock>
                </Label>
            </StackPanel>
        </GroupBox>
        
        <StackPanel Orientation="Horizontal" Grid.Row="1" HorizontalAlignment="Center">
            <Button
                Margin="5 5 5 5"
                Command="{Binding BookTheRoomCommandAsync}"
                IsEnabled="{Binding RoomIsSelected}"
                Content="Book this room"
                FontSize="14" />
            <Button
                Margin="5 5 5 5"
                Command="{Binding PopulateTheRoomCommandAsync}"
                IsEnabled="{Binding RoomIsSelected}"
                Content="Populate this room"
                FontSize="14" />
        </StackPanel>
    </Grid>
</UserControl>