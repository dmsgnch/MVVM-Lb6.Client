<Window x:Class="MVVM_Lb6.Views.Windows.GroupsView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:faf="http://schemas.fontawesome.com/icons/fonts"
        xmlns:fas="http://schemas.fontawesome.com/icons/svg"
        xmlns:local="clr-namespace:MVVM_Lb6.Views.Windows"
        xmlns:components="clr-namespace:MVVM_Lb6.Components"
        xmlns:mainCommands="clr-namespace:MVVM_Lb6.Commands.MainCommands"
        mc:Ignorable="d"
        d:DesignHeight="800"
        d:DesignWidth="1200">

    <DockPanel>
        <Menu DockPanel.Dock="Top" Height="20">
            <MenuItem Header="File" Height="20">
                <MenuItem Header="Exit" Height="20" Margin="-15,-20,-5,-20">
                    <MenuItem.Icon>
                        <fas:ImageAwesome Icon="Solid_DoorOpen" Margin="5,0,0,0" />
                    </MenuItem.Icon>
                    <MenuItem.Command>
                        <mainCommands:CloseApplicationCommand />
                    </MenuItem.Command>
                </MenuItem>
            </MenuItem>
            <MenuItem Header="Help" Height="20">
                <MenuItem Header="About program" Height="20" Margin="-15,-20,-5,-20">
                    <MenuItem.Icon>
                        <faf:ImageAwesome Icon="Solid_Info" Margin="10,0,0,0" />
                    </MenuItem.Icon>
                </MenuItem>

            </MenuItem>
        </Menu>

        <Grid>
            <StackPanel VerticalAlignment="Center">
                <StackPanel.Style>
                    <Style TargetType="StackPanel">
                        <Setter Property="Visibility" Value="Collapsed" />
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsLoading}" Value="True">
                                <Setter Property="Visibility" Value="Visible" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </StackPanel.Style>

                <TextBlock
                    Margin="0,10,0,0"
                    Text="Loading Rooms..."
                    TextAlignment="Center" />
            </StackPanel>


            <Grid Name="GroupListGrid">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*" MinWidth="250" />
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>


                <components:RoomsListing
                    Grid.Column="0"
                    DataContext="{Binding GroupsListingViewModel}" />

                <components:RoomInfo
                    Grid.Column="1"
                    DataContext="{Binding GroupsStudentsViewModel}" />

                <DockPanel Grid.Column="2"></DockPanel>

                <GridSplitter
                    Grid.Column="0"
                    HorizontalAlignment="Right"
                    Width="2" />

                <GridSplitter
                    Grid.Column="1"
                    HorizontalAlignment="Right"
                    Width="2" />

            </Grid>

        </Grid>
    </DockPanel>
</Window>